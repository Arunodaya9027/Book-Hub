<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.AboutFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/txtAboutApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="7dp"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="29dp"
        android:padding="10dp"
        android:text="@string/about_fragment"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/txtAboutMe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtAboutApp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="125dp"
        android:layout_marginLeft="125dp"
        android:layout_marginTop="183dp"
        android:padding="10dp"
        android:text="@string/about_me"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/txtContact"
        android:layout_width="337dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtAboutMe"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="111dp"
        android:padding="10dp"
        android:text="@string/contact"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtContact2"
        android:layout_width="375dp"
        android:layout_height="58dp"
        android:layout_below="@+id/txtContact"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="-10dp"
        android:autoLink="web"
        android:linksClickable="true"
        android:padding="10dp"
        android:text="@string/contact2"
        android:textColorLink="@color/blue"
        android:textSize="17sp"
        android:textStyle="italic" />

</RelativeLayout>